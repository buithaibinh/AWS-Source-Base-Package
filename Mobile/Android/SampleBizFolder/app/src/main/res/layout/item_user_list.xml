<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/itemUserList"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:gravity="center"
                                                   android:layout_height="100dp">
    <ImageView android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/amazon" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginBottom="8dp"
               android:scaleType="fitXY"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" android:id="@+id/imgAvatar"/>
    <androidx.appcompat.widget.AppCompatTextView android:id="@+id/tvName"
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="tykudopk@gmail.com"
                                                 android:textSize="20sp"
                                                 android:layout_gravity="center"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 android:layout_marginTop="8dp"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                                                 android:layout_marginStart="8dp"
                                                 app:layout_constraintHorizontal_bias="0.503"
                                                 app:layout_constraintVertical_bias="0.36"/>

</androidx.constraintlayout.widget.ConstraintLayout>