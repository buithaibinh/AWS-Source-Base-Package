<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/bottom_sheet"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="150dp"
                                                   app:behavior_hideable="false"
                                                   app:behavior_peekHeight="10dp"
                                                   android:background="@color/white"
                                                   app:layout_behavior="@string/bottom_sheet_behavior">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sendMessage" android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSendOnly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/send_message"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/imgSend"
                app:layout_constraintHorizontal_bias="0.313"
                app:layout_constraintVertical_bias="1.0"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_send"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/imgSend" android:layout_marginEnd="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.444"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/colorPrimary"
                  tools:layout_editor_absoluteY="50dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="@+id/sendMessage"
                  android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sendMessageAll"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/sendMessage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSendAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/send_all"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/imgSendAll"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content"
                                                      android:layout_gravity="center"
                                                      android:src="@drawable/ic_send"
                                                      android:layout_marginTop="8dp"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      android:layout_marginBottom="8dp"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      android:id="@+id/imgSendAll" android:layout_marginEnd="44dp"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      app:layout_constraintVertical_bias="0.444"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/colorPrimary"
                  tools:layout_editor_absoluteY="50dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="@+id/sendMessageAll"
                  android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/removeUser"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/sendMessageAll" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRemove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/delete"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/imgRemove"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content"
                                                      android:layout_gravity="center"
                                                      android:src="@drawable/ic_delete"
                                                      android:layout_marginTop="8dp"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      android:layout_marginBottom="8dp"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      android:id="@+id/imgRemove" android:layout_marginEnd="44dp"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      app:layout_constraintVertical_bias="0.444"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>