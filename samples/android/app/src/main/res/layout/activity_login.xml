<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <include layout="@layout/toolbar"/>
    <androidx.appcompat.widget.AppCompatEditText android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginTop="100dp"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 android:hint="@string/email"
                                                 android:text="tykudopk@gmail.com"
                                                 android:id="@+id/edtEmail" app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.appcompat.widget.AppCompatEditText android:id="@+id/edtPassword"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginTop="44dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 android:text="\@Namanh123"
                                                 android:hint="@string/password"
                                                 android:inputType="textPassword"
                                                 app:layout_constraintHorizontal_bias="0.0"
                                                 app:layout_constraintTop_toBottomOf="@+id/edtEmail"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintTop_toBottomOf="@+id/edtPassword"
                                                       app:layout_constraintStart_toStartOf="@+id/edtPassword"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
                                                       android:id="@+id/constraintLayout"
                                                       android:layout_marginTop="24dp"
                                                       app:layout_constraintHorizontal_bias="1.0">
        <Button android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:onClick="onTapLoginEmail"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/border_button"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" android:layout_marginStart="56dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:onClick="onTapRegister"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/border_button"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="56dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_with_google"
            android:onClick="onTapLoginGoogle"
            android:layout_marginTop="32dp"
            android:textColor="@color/color_google"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginFacebook" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/border_button"/>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_with_facebook"
            android:onClick="onTapLoginFacebook"
            android:textColor="@color/color_facebook"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/border_button"/>
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/develop_by_nam_anh_with_version_1_0"
                                                 android:layout_marginBottom="24dp"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="24dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="24dp"
                                                 android:textColor="@color/colorAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>