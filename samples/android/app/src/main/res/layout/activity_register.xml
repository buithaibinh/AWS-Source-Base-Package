<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
    <include layout="@layout/toolbar"/>
    <androidx.appcompat.widget.AppCompatEditText android:id="@+id/edtPassword"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginTop="44dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 android:hint="@string/password"
                                                 android:inputType="textPassword"
                                                 app:layout_constraintHorizontal_bias="0.0"
                                                 app:layout_constraintTop_toBottomOf="@+id/edtEmail"/>
    <androidx.appcompat.widget.AppCompatEditText android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginTop="100dp"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 android:hint="@string/email"
                                                 android:id="@+id/edtEmail" app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.appcompat.widget.AppCompatEditText android:id="@+id/edtConfirmCode"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 android:inputType="number"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 android:hint="@string/confirm_code"
                                                 app:layout_constraintHorizontal_bias="0.0"
                                                 android:layout_marginTop="44dp"
                                                 app:layout_constraintTop_toBottomOf="@+id/edtPassword"/>
    <androidx.appcompat.widget.AppCompatButton android:id="@+id/btnRegister"
                                               android:padding="10dp"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:text="@string/register"
                                               android:onClick="onTapRegisterAccount"
                                               android:background="@drawable/border_button"
                                               app:layout_constraintStart_toStartOf="@+id/edtPassword"
                                               android:layout_marginTop="72dp"
                                               app:layout_constraintTop_toBottomOf="@+id/edtConfirmCode"
                                               android:layout_marginStart="60dp"/>
    <androidx.appcompat.widget.AppCompatButton android:id="@+id/btnConfirm"
                                               android:padding="10dp"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:text="@string/confirm_code"
                                               android:onClick="onTapConfirmCode"
                                               android:background="@drawable/border_button"
                                               app:layout_constraintEnd_toEndOf="@+id/edtPassword"
                                               android:layout_marginTop="72dp"
                                               app:layout_constraintTop_toBottomOf="@+id/edtConfirmCode"
                                               android:layout_marginEnd="56dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>